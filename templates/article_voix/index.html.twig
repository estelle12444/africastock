{% extends 'base.html.twig' %}

{% block title %}ArticleVoix index{% endblock %}

{% block body %}
    <h1>ArticleVoix index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>VoixName</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Date_de_creation</th>
                <th>Active</th>
                <th>Auteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article_voix in article_voixes %}
            <tr>
                <td>{{ article_voix.id }}</td>
                <td> <iframe class="card-img-top" width="auto" height="auto" src="/assets/uploads/voixOff/{{ article_voix.voixName }}"
            frameborder="0" allowfullscreen></iframe></td>
                <td>{{ article_voix.titre }}</td>
                <td>{{ article_voix.description }}</td>
                <td>{{ article_voix.prix }}</td>
                <td>{{ article_voix.dateDeCreation ? article_voix.dateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article_voix.active ? 'Yes' : 'No' }}</td>
                <td>{{ article_voix.auteur }}</td>
                <td>
                    <a href="{{ path('article_voix_show', {'id': article_voix.id}) }}">show</a>
                    <a href="{{ path('article_voix_edit', {'id': article_voix.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_voix_new') }}">Create new</a>
{% endblock %}
