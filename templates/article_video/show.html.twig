            <tr>
                <th>Auteur</th>
                <td>{{ article_video.auteur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_video_index') }}">back to list</a>

    <a href="{{ path('article_video_edit', {'id': article_video.id}) }}">edit</a>

